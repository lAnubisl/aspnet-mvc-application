@{
    Layout = null;
}
@model PresentationService.Models.AdminModels.ProductModels.ProductUploadImageModel
<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" type="text/css" href="/Content/Styles/style.css" media="screen" />
        <link rel="stylesheet" type="text/css" href="/Content/Styles/admin/admin.css" />
        <title>UploadImage</title>
        @if (!string.IsNullOrEmpty(Model.URL))
        {
            <script type="text/javascript">
                if (window.parent['setNewImage']) {
                    var fn = window.parent['setNewImage'];
                    fn("@Model.URL");
                }
            </script>
        }
    </head>
<body>
    <div>
        <form method="POST" enctype="multipart/form-data" style="margin-left: 30px;margin-right:30px;">
            <div style="font-size: 16px; font-weight: bold; margin: 30px; text-align: center;">
                Загрузка изображения
            </div>
            <div>
                @Html.LabelFor(m => m.ImageUrl)
            </div>
            <div>
                @Html.TextBoxFor(m => m.ImageUrl, new { style="width:300px;" })
            </div>
            <div style="font-size: 14px; font-weight: bold; margin: 10px; text-align: center;">
                ИЛИ
            </div>
            <div>
                @Html.LabelFor(m => m.File)
            </div>
            <div>
                @Html.TextBoxFor(m => m.File, new { type = "file" })
            </div>
            <div style="margin-top: 20px;">
                <a href="#" onclick="$('form').submit();" class="button medium grey">Сохранить</a>
            </div>
        </form>
    </div>
</body>
</html>