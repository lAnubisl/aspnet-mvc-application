@{
    Layout = null;
}
@model PresentationService.Models.AdminModels.ProductModels.ProductUploadImageModel
<!DOCTYPE html>
<html>
<head>
    <title>UploadImage</title>
    @if (!string.IsNullOrEmpty(Model.URL))
    {
        <script type="text/javascript">
            if (window.parent['setNewImage']) {
                var fn = window.parent['setNewImage'];
                fn("@Model.URL");
            }
        </script>
    }
</head>
<body>
    <div>
        <form method="POST" enctype="multipart/form-data">
            @Html.TextBoxFor(m => m.ImageUrl)
            @Html.TextBoxFor(m => m.File, new { type = "file" })
            <input type="submit"/>
        </form>
    </div>
</body>
</html>