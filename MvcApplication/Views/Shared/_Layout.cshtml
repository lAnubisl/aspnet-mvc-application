                <li><a href="index2.html" class="but6">Контакты</a></li>
            </ul>
        </div>
    </div>
    <div id="wrapper">
        <div id="content_inside">
            @Html.Action("Menu", "Category")
            <div id="main_block">
                @RenderBody()
            </div>
        </div>
    </div>
    <div id="footer">
        <div id="footer_inside">
            <ul class="footer_menu">
                <li>@Html.ActionLink("Главная", "Index", "Home", null, new { @class = "but1_active" })|</li>
