@model PresentationService.Models.HomeModels.HomeIndexModel
<div class="slideshow-container">
    <div class="flexslider" id="index-slider">
        <ul class="slides">
            <li>
                <a href="#">
                    <img src="/Content/images/slider1.jpg" alt="" />
                </a>
                <p class="flex-caption">This is a place for a brief description.</p>
            </li>
            <li>
                <a href="#">
                    <img src="/Content/images/slider2.jpg" alt="" />
                </a>
                <p class="flex-caption">Here we go again, history repeating!</p>
            </li>
            <li>
                <a href="#">
                    <img src="/Content/images/slider3.jpg" alt="" />
                </a>
            </li>
            <li>
                <a href="#">
                    <img src="/Content/images/slider4.jpg" alt="" />
                </a>
                <p class="flex-caption">Promise I'll stop...one day.</p>
            </li>
        </ul>
    </div>
</div>
<div class="portfolio-grid">
    <ul id="thumbs">
        @foreach (var product in Model.TopProducts)
        {
            @Html.DisplayFor(m => product)
        }
    </ul>
</div>
<div style="text-align: center;">
   <a href="#" class="button medium grey">Смотреть все продукты</a> 
</div>